<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/std_margin"
    android:layout_marginRight="@dimen/std_margin"
    android:layout_marginTop="@dimen/min_margin"
    android:layout_marginBottom="@dimen/min_margin"
    app:contentPadding="@dimen/min_padding"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <!-- Profile Name -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edit_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="@string/profile_name"/>
        </android.support.design.widget.TextInputLayout>
        <!-- Profile Layout -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_profile_name">
            <EditText
                android:id="@+id/edit_profile_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:singleLine="true"
                android:maxLines="1"
                android:hint="@string/profile_layout"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>